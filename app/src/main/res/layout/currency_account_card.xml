<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="3dp"
    android:gravity="center"
    android:background="@drawable/layout_border"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/active_vs"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView android:id="@+id/currency_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_vs"
            android:textSize="25sp"
            android:layout_marginLeft="15dip"/>
        <Button android:id="@+id/cash_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="11sp"
            android:text="@string/request_cash_lbl" />
    </LinearLayout>

    <org.votingsystem.ui.ExpandableHeightGridView android:id="@+id/tag_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:horizontalSpacing="5dp"
        android:isScrollContainer="false"
        android:columnWidth="120dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"/>

</LinearLayout>

