<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dnie_screen_background"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/dnie_screen_background"
	android:orientation="vertical" >

	<RelativeLayout
		android:id="@+id/mainRelativeLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >

		<WebView
			android:id="@+id/wvKS"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:visibility="invisible"/>

		<LinearLayout
			android:id="@+id/mainLinearLayout"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_gravity="bottom">
			<TextView
				android:id="@+id/msg"
				android:visibility="visible"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_margin="10dip"
				android:layout_gravity="center"
				android:text="@string/op_dgtinit"
				android:textColor="#FFFFFF"
				android:textSize="26sp"
				android:textStyle="bold"/>

			<ImageView
				android:id="@+id/result_img"
				android:visibility="visible"
				android:contentDescription="@string/str_logo_desc"
				android:src="@drawable/dni30_grey_peq"
				android:layout_gravity="center_horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:id="@+id/resultinfo"
				android:visibility="invisible"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="10dip"
				android:layout_marginLeft="10dip"
				android:text=""
				android:layout_gravity="center_horizontal|center_vertical"
				android:textColor="#FFFFFF"
				android:textSize="20sp"
				android:textStyle="bold"/>

		</LinearLayout>
	</RelativeLayout>
</LinearLayout>